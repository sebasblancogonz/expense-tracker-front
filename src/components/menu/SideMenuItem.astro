---
interface Props {
	href?: string
}

const { href } = Astro.props
---

<li>
    <a 
    class="flex gap-4 items-center p-3 m-5 shadow-md dark:shadow-gray-900 rounded-lg text-sky-600 dark:text-sky-300 hover:bg-slate-200  active:bg-slate-300 dark:hover:bg-slate-700 dark:active:bg-slate-600" 
    href={href}>
        <slot />
    </a>
</li>
