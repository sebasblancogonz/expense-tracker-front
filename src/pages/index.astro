---
import Layout from '../layouts/Layout.astro'
import Home from './Home.tsx'
---

<Layout title="Expense Tracker">
	<main class="flex w-full flex-col text-chestnut-600 [grid-area:main]">
		<div class="w-full rounded-lg p-5 text-center">
			<span class="">Upcomping expenses</span>
		</div>
		<div id="expenses" class="w-full gap-2">
			<div class="mt-3 [grid-area:loans]">
				<div class="w-full rounded-lg p-5 text-center">
					<div class="w-full border-b border-gray-100 p-2"><span>Loans</span></div>

					<table class="w-full">
						<tr>
							<td class="p-2"> BBVA</td>
							<td class="p-2"> 23/01</td>
							<td class="amount p-2"> 49.99</td>
						</tr>
						<tr>
							<td class="p-2"> BBVA</td>
							<td class="p-2"> 23/01</td>
							<td class="amount p-2"> 49.99</td>
						</tr>
						<tr>
							<td class="p-2"> BBVA</td>
							<td class="p-2"> 23/01</td>
							<td class="amount p-2"> 49.99</td>
						</tr>
					</table>
				</div>
			</div>
			<div class="mt-3 [grid-area:expenses]">
				<div class="w-full rounded-lg p-5 text-center">
					<div class="w-full border-b border-gray-100 p-2">
						<span>Your expenses by category</span>
					</div>

					<Home client:load />
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	#expenses {
		display: grid;
		grid-template-areas: 'loans expenses';
		grid-template-columns: 1fr 1fr;
	}

	.amount {
		text-align: right;
	}
</style>
